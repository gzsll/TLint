<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/epf_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:text="Default Content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      />

  <TextView
      android:id="@+id/epf_empty"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:text="Empty data"
      android:textAppearance="?android:attr/textAppearanceLarge"
      />

  <TextView
      android:id="@+id/epf_error"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:text="Error happens"
      android:textAppearance="?android:attr/textAppearanceLarge"
      />

  <LinearLayout
      android:id="@+id/epf_progress"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      >

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/epf_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dip"
        android:singleLine="true"
        android:text="Loading..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/epf_login"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:text="User not login"
      android:textAppearance="?android:attr/textAppearanceLarge"
      />


  <TextView
      android:id="@+id/epf_collect"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:visibility="gone"
      android:text="not collect"
      android:textAppearance="?android:attr/textAppearanceLarge"
      />

</FrameLayout>